{
    "manifest_version": 2,
    "name": "YouTube Shorts Blocker",
    "version": "1.2",
    "description": "A brutally minimal browser extension that hides YouTube Shorts everywhere.",
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "58.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ],
        "collects_data": false
      }
    }
  }
}
